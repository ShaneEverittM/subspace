{
  "name": "subspace",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "basis": "file:../../rust/basis",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^1.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3"
  },
  "scripts": {
    "start": "concurrently -k \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electronmon .\"",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "dist:win": "npm run build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "dist:mac": "npm run build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "dist:linux": "npm run build && electron-builder -l -c.extraMetadata.main=build/electron.js",
    "react-start": "react-scripts start"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^11.4.2",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "^3.1.1",
    "electronmon": "^1.1.2",
    "wait-on": "^5.3.0"
  },
  "homepage": "./",
  "main": "./public/electron.js",
  "build": {
    "appId": "com.electron.subspace",
    "productName": "Subspace",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg",
      "category": "utilities",
      "type": "development"
    },
    "win": {
      "target": "nsis",
      "icon": "./public/logo512.png"
    },
    "linux": {
      "target": "deb",
      "category": "Tools"
    }
  }
}
